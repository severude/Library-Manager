extends layout

block head
  title Patrons

block content
  h1 Patrons
  form.search(method='POST' action='/patrons/search')
    input(type='search' class='searchBox' name='search' placeholder="Name, Address, Email,")
    input(type='submit' class='searchButton' value='Search')
  p
    a.button(href='/patrons/new_patron') Create New Patron
  table
    thead
      tr
        th Name 
        th Address
        th Email
        th Library ID
        th Zip
    tbody
      each patron in patrons
        tr
          td
            a(href=`/patrons/patron_detail/${patron.id}`) #{patron.first_name} #{patron.last_name}
          td #{patron.address}
          td #{patron.email}
          td #{patron.library_id}
          td #{patron.zip_code}
  if pages.length > 1
    ul.pagination
      each page in pages
        li
          if page == activePage
            a(href=`/patrons/page-${page}` class='active') #{page}
          else
            a(href=`/patrons/page-${page}`) #{page}
